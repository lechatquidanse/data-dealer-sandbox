{% extends "SportlobsterFrontBundle::layout.html.twig" %}

{% block content %}
	
	<div class="row starter-template">
		<h1>News {{ category }}</h1>
		<div class="span9">
		{% for item in collection %}

			{% set item_type = item.category|lower %}

			{% if exclude_type != item_type %}
				<div class="span4">
					<h2>{{ item.title|raw }}</h2>
					<p>{{ item.description|raw }}</p>
					<p class="small">{{ item.pupDate|date('Y-m-d H:i')}}</p>
					<p><a class="btn btn-default" href="{{ path('sportlobster_front_category_type', {'category': category, 'type': item_type|url_encode }) }}" role="button">View all {{ item_type }}</a></p>
				</div>
				<hr/>
			{% endif %}

		{% endfor %}
		</div>
	</div>
{% endblock %}